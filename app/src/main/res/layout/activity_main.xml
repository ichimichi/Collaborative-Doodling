    <TextView
        android:text="Welcome"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/titleTV"
        android:layout_marginTop="56dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textAlignment="center" android:gravity="center"/>


    <Button
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileBtn"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"/>

    <Button
        android:text="Start Doodling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newDoodleBtn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/profileBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        app:layout_constraintHorizontal_bias="0.503"/>
    <Button
        android:text="Saved Doodle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savedDoodleBtn"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/newDoodleBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>