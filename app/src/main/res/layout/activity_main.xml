<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pencilAV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:lottie_rawRes="@raw/pencil"
        app:lottie_autoPlay="true"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:text="Welcome Doodler"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:id="@+id/titleTV"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textAlignment="center" android:gravity="center"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="120dp" app:layout_constraintTop_toTopOf="parent"/>


    <Button
        android:text="Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/profileBtn"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp" app:layout_constraintHorizontal_bias="0.0"/>

    <Button
        android:text="Start Doodling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newDoodleBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        app:layout_constraintHorizontal_bias="0.0"/>
    <Button
        android:text="Saved Doodle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/savedDoodleBtn"
        app:layout_constraintTop_toBottomOf="@+id/newDoodleBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp" app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>