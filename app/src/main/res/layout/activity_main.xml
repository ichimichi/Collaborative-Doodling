        app:layout_constraintTop_toBottomOf="@+id/titleTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp" app:layout_constraintHorizontal_bias="1.0"/>

    <Button
        android:text="Start Doodling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/newDoodleBtn"
        app:layout_constraintTop_toBottomOf="@+id/profileBtn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="64dp"
        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="4dp"/>
