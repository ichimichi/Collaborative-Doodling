<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.sessionOptionActivity">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/pencilAV"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="64dp"
        app:lottie_rawRes="@raw/stroke_1"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:layout_marginTop="120dp"
        android:hint="Room Name"
        android:layout_marginEnd ="32dp"
        android:layout_marginStart="32dp"
        android:ems="10"
        android:id="@+id/roomNameET"
        app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent"/>
    <Button
        android:text="Join Room"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/joinRoomBtn"
        android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/roomNameET"
        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="32dp"/>
    <TextView
        android:text="If the room does not exist then it will be created"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        app:layout_constraintTop_toBottomOf="@+id/joinRoomBtn"/>
</androidx.constraintlayout.widget.ConstraintLayout>