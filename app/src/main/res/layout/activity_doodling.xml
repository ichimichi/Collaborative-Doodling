<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DoodlingActivity">

    <com.softwareengineeringproject.collaborativedoodling.util.PaintView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/paintView" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
        android:text="clear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clearBtn"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:background="@color/red"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/colorRedBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/clearBtn"
        android:layout_marginStart="8dp"/>

    <Button
        android:background="@color/cyan"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/colorCyanBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorRedBtn"
        android:layout_marginStart="8dp"/>

    <Button
        android:background="@color/green"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/colorGreenBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorCyanBtn"
        android:layout_marginStart="8dp"/>

    <Button
        android:background="@color/white"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/colorWhiteBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorGreenBtn"
        android:layout_marginStart="8dp"/>

    <Button
        android:background="@color/black"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/colorBlackBtn"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/colorWhiteBtn"
        android:layout_marginStart="8dp"/>

    <TextView
        tools:text="Users List"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/activeUsersListTV"
        android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>